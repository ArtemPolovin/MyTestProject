<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weatherData"
            type="com.example.domain.models.WeatherData" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/daily_weather_cell_background"
    android:padding="8dp"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{weatherData.date}"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@{weatherData.city_name}"
        android:textColor="@color/text_color"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@{weatherData.temp}"
        android:textColor="@color/text_color"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="@+id/textLocation"
        app:layout_constraintStart_toStartOf="@+id/textLocation"
        app:layout_constraintTop_toBottomOf="@+id/textLocation" />

    <TextView
        android:id="@+id/temperature_determination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textTemperature"
        android:layout_toEndOf="@+id/textTemperature"
        android:text="o"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textTemperature"
        app:layout_constraintTop_toTopOf="@+id/textTemperature" />

    <TextView
        android:id="@+id/tempType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="C"
        android:textColor="@color/text_color"
        android:textSize="23sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTemperature"
        app:layout_constraintStart_toEndOf="@+id/textTemperature" />

    <ImageView
        android:id="@+id/imageWeatherIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cloud_download"
        app:layout_constraintEnd_toEndOf="@+id/textTemperature"
        app:layout_constraintStart_toStartOf="@+id/textTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textTemperature"
        app:loadImage="@{weatherData.icon}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>