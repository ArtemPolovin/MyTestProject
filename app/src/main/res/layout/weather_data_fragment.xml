<?xml version="1.0" encoding="utf-8"?>


<layout>

    <data>

        <variable
            name="weatherData"
            type="com.example.mytestproject.ui.models.weatherDataModel.WeatherData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_1_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list"
        tools:context=".ui.weatherData.WeatherDataFragment">


        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@{weatherData.city_name}"
            android:textColor="@color/text_color"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@{Double.toString(weatherData.temp)}"
            android:textColor="@color/text_color"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/textLocation"
            app:layout_constraintStart_toStartOf="@+id/textLocation"
            app:layout_constraintTop_toBottomOf="@+id/textLocation" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textTemperature"
            android:layout_toEndOf="@+id/textTemperature"
            android:text="o"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textTemperature"
            app:layout_constraintTop_toTopOf="@+id/textTemperature" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="C"
            android:textColor="@color/text_color"
            android:textSize="46sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textTemperature"
            app:layout_constraintStart_toEndOf="@+id/textTemperature" />

        <ImageView
            android:id="@+id/imageWeatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cloud_download"
            app:layout_constraintEnd_toEndOf="@+id/textTemperature"
            app:layout_constraintStart_toStartOf="@+id/textTemperature"
            app:layout_constraintTop_toTopOf="@+id/textTemperature"
            app:loadImage="@{weatherData.icon}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>







