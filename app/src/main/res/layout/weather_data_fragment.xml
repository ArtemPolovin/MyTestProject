<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="weatherData"
            type="com.example.domain.models.WeatherData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_1_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list"
        tools:context=".ui.weatherData.WeatherDataFragment">

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@{weatherData.city_name}"
            android:textColor="@color/text_color"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@{weatherData.temp}"
            android:textColor="@color/text_color"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/textLocation"
            app:layout_constraintStart_toStartOf="@+id/textLocation"
            app:layout_constraintTop_toBottomOf="@+id/textLocation" />

        <TextView
            android:id="@+id/temperature_determination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textTemperature"
            android:layout_toEndOf="@+id/textTemperature"
            android:text="o"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textTemperature"
            app:layout_constraintTop_toTopOf="@+id/textTemperature" />

        <TextView
            android:id="@+id/tempType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="C"
            android:textColor="@color/text_color"
            android:textSize="46sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textTemperature"
            app:layout_constraintStart_toEndOf="@+id/textTemperature" />

        <ImageView
            android:id="@+id/imageWeatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cloud_download"
            app:layout_constraintEnd_toEndOf="@+id/textTemperature"
            app:layout_constraintStart_toStartOf="@+id/textTemperature"
            app:layout_constraintTop_toTopOf="@+id/textTemperature"
            app:loadImage="@{weatherData.icon}" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.418" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry, you got some error"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginBottom="250dp"
            android:text="retry"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textError"
            app:layout_constraintStart_toStartOf="@+id/textError"
            app:layout_constraintTop_toBottomOf="@+id/textError" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_error_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btnRetry, textError" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_temp_abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="temperature_determination,tempType" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>







